{
  "name": "backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec node --loader ts-node/esm src/index.ts",
    "build": "tsc && npm run copy-files",
    "start": "node dist/index.js",
    "postinstall": "npm run build",
    "copy-files": "cp -r src/migrations dist/ && cp -r uploads dist/ 2>/dev/null || mkdir -p dist/uploads",
    "lint": "eslint src --ext .ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d ormconfig.cjs",
    "migration:run": "npm run typeorm -- migration:run -d ormconfig.cjs",
    "migration:revert": "npm run typeorm -- migration:revert -d ormconfig.cjs",
    "migration:show": "npm run typeorm -- migration:show -d ormconfig.cjs",
    "schema:sync": "npm run typeorm -- schema:sync -d ormconfig.cjs",
    "schema:drop": "npm run typeorm -- schema:drop -d ormconfig.cjs",
    "test:deploy": "node test-deploy.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.2.2",
    "sqlite": "^5.0.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.25",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.8",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "~5.8.3"
  }
}
